        <section id="links">
                {% filter markdown -%}
                {% block sec3 %}{% endblock %}
                {%- endfilter %} 

            <article class="grid-4-small-2-tiny-1">
                    <a href="https://twitter.com/etiennebatise" target="_blank">
                        <i class="fa fa-twitter fa-5x"></i>
                    </a> 

                    <a href="https://github.com/etiennebatise" target="_blank">
